#!/usr/bin/env bash
{{ if eq .chezmoi.hostname "gnomon" }}
# gnomon - Use swaylock with custom theme
swaylock -f -c 050c08 -d \
 --font "IosevkaTermSlab NFM" \
 --font-size 60 \
 --indicator-radius 200 \
 --indicator-thickness 50 \
 --key-hl-color 32d8bc \
 --separator-color 69537c \
 --line-uses-inside \
 --inside-color 118080cc \
 --ring-color 11808000 \
 --text-color 050c08 \
 --inside-clear-color 4d5f55cc \
 --ring-clear-color 4d5f5500 \
 --text-clear-color 050c08 \
 --inside-ver-color 08af8bcc \
 --ring-ver-color 050c0800 \
 --text-ver-color 050c08 \
 --ring-wrong-color 050c0800 \
 --inside-wrong-color 050c08 \
 --text-wrong-color 8d6565 \
 --line-caps-lock-color 58709b \
 --text-caps-lock-color 58709b \
 -i ~/.config/seadream-burst-1200-1920.png \
 --ignore-empty-password
{{ else if eq .chezmoi.hostname "TAWA" }}
# TAWA - Use hyprlock (when configured) or swaylock as fallback
if command -v hyprlock &> /dev/null; then
    hyprlock
else
    # Fallback to swaylock until hyprlock is configured
    swaylock -f -c 050c08 -d \
     --font "IosevkaTermSlab NFM" \
     --font-size 60 \
     --indicator-radius 200 \
     --indicator-thickness 50 \
     --key-hl-color 32d8bc \
     --separator-color 69537c \
     --line-uses-inside \
     --inside-color 118080cc \
     --ring-color 11808000 \
     --text-color 050c08 \
     --inside-clear-color 4d5f55cc \
     --ring-clear-color 4d5f5500 \
     --text-clear-color 050c08 \
     --inside-ver-color 08af8bcc \
     --ring-ver-color 050c0800 \
     --text-ver-color 050c08 \
     --ring-wrong-color 050c0800 \
     --inside-wrong-color 050c08 \
     --text-wrong-color 8d6565 \
     --line-caps-lock-color 58709b \
     --text-caps-lock-color 58709b \
     -i ~/.config/seadream-burst-1200-1920.png \
     --ignore-empty-password
fi
{{ else }}
# Default - Use swaylock
swaylock -f -c 000000
{{ end }}
