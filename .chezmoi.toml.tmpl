# Chezmoi configuration template
# This file will be customized for each machine

[data]
    # Machine identification
    machine = "{{ .chezmoi.hostname }}"
    os = "{{ .chezmoi.os }}"
    arch = "{{ .chezmoi.arch }}"
    
    # Machine-specific settings
    {{ if eq .chezmoi.hostname "gnomon" }}
    # gnomon - MNT Pocket Reform, Debian forky/sid, Sway
    terminal = "kitty"
    shell = "zsh"
    wm = "sway"
    editor = "micro"
    has_omarchy = false
    has_battery = true
    waybar_wm = "sway"
    waybar_modules_left = ["custom/run", "sway/workspaces", "custom/audio_idle_inhibitor"]
    waybar_modules_center = ["sway/window"]
    waybar_modules_right = ["custom/weather", "custom/audio_profile", "tray", "battery", "clock"]
    waybar_height = 24
    {{ else if eq .chezmoi.hostname "TAWA" }}
    # TAWA - Desktop PC, Arch Linux (Omarchy), Hyprland
    terminal = "kitty"
    shell = "bash"
    wm = "hyprland"
    editor = "micro"
    has_omarchy = true
    has_battery = false
    waybar_wm = "hyprland"
    waybar_modules_left = ["custom/omarchy", "hyprland/workspaces"]
    waybar_modules_center = ["clock", "custom/update", "custom/voxtype", "custom/screenrecording-indicator"]
    waybar_modules_right = ["group/tray-expander", "bluetooth", "network", "pulseaudio", "cpu"]
    waybar_height = 26
    {{ else }}
    # Default - fallback for other machines
    terminal = "kitty"
    shell = "bash"
    wm = "sway"
    editor = "micro"
    has_omarchy = false
    has_battery = false
    waybar_wm = "sway"
    waybar_modules_left = ["sway/workspaces"]
    waybar_modules_center = ["sway/window"]
    waybar_modules_right = ["tray", "clock"]
    waybar_height = 24
    {{ end }}
    
    # User preferences
    username = "{{ .chezmoi.username }}"
    {{ if eq .chezmoi.hostname "gnomon" }}
    email = "linux@example.com"
    {{ else if eq .chezmoi.hostname "TAWA" }}
    email = "nick@wizardtower.org"
    {{ else }}
    email = "{{ .chezmoi.username }}@example.com"
    {{ end }}
    
    # Paths
    config_dir = "{{ .chezmoi.homeDir }}/.config"

[git]
    autocommit = true
    autopush = true
