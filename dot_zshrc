# Set personal aliases, overriding those provided by Oh My Zsh libs,
# plugins, and themes. Aliases can be placed here, though Oh My Zsh
# users are encouraged to define aliases within a top-level file in
# the $ZSH_CUSTOM folder, with .zsh extension. Examples:
# - $ZSH_CUSTOM/aliases.zsh
# - $ZSH_CUSTOM/macos.zsh
# For a full list of active aliases, run `alias`.


## aliases
# config aliases
alias config="code ~/.local/share/chezmoi; chezmoi apply"
alias zshconfig="chezmoi edit ~/.zshrc && chezmoi apply"
alias termconfig="chezmoi edit ~/.config/wezterm/wezterm.lua && chezmoi apply"
alias swayconfig="chezmoi edit ~/.config/sway/config && chezmoi apply"
alias logonconfig="chezmoi edit ~/.config/logon.sh && chezmoi apply"
alias ohmyzshconfig="chezmoi edit ~/.oh-my-zsh && chezmoi apply"

# logon script alias
alias logon="~/.config/logon.sh"

# app aliases
alias obsidian="~/Apps/Obsidian &"
alias gimp="~/Apps/GIMP &"
alias notes="obsidian"
alias ll="ls -ll"
alias fetch="fastfetch"
alias wifi-list="nmcli device wifi list"
alias wifi-connection="nmcli connection show"
alias wifi-connect="nmcli device wifi connect"
alias keyboard-flash="sudo sleep 1; cd ~/pocket-reform/pocket-reform-keyboard-fw/pocket-hid; ./build.sh;echo \"flashing in 10s\";sleep 7; echo \"flashing in 3s\"; sleep 4;sudo picotool load build/pocket-hid.uf2 -f"
alias clock="~/.cargo/bin/tenki --mode snow -l 1000 --wind disable"
alias moon="curl \"wttr.in/moon?Fun\""
alias weather="curl \"wttr.in/kirkland?FunQ2\""
alias chezpush="~/bin/chezpush.sh"

